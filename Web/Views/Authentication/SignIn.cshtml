<header>
    <h1>Sign in</h1>
    @await Component.InvokeAsync("NavBar")
</header>

<main>
    <form>
        <input
            type="text"
            name="username"
            placeholder="Username"
            aria-label="Username"
            autoComplete="username"
            required/>
        <input
            type="password"
            name="password"
            placeholder="Password"
            aria-label="Password"
            autoComplete="current-password"
            required/>

        <button type="submit">
            Login
        </button>
    </form>
</main>
