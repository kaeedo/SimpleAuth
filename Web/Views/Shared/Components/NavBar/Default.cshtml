@model Web.Models.NavBarModel

<nav>
    <ul>
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>
            @if (Model.IsLoggedIn)
            {
                @Html.ActionLink("Feel free to enter", "Index", "Secure")
            }
            else
            {
                @Html.ActionLink("Don't click!", "Index", "Secure")
            }
        </li>
    </ul>
    <ul>
        @if (Model.IsLoggedIn)
        {
            <li>@Html.ActionLink("Logout", "Logout", "SupabaseAuthentication")</li>
        }
        else
        {
            <li>@Html.ActionLink("Passwordless Sign in", "SignIn", "PasswordlessAuthentication")</li>
            <li>@Html.ActionLink("Passwordless Sign up", "SignUp", "PasswordlessAuthentication")</li>
            <li>@Html.ActionLink("Sign in", "SignIn", "SupabaseAuthentication")</li>
            <li>@Html.ActionLink("Sign up", "SignUp", "SupabaseAuthentication")</li>
        }
    </ul>
</nav>
